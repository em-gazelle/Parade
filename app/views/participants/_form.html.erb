    <%#= f.label :dancer %>
    <%#= f.check_box :dancer %>
  </div>
 -->
  <div class="field">
    <%= f.label :other, :class => "info" %>:
    <%= f.text_field :other %>
  </div>

  <div class="field">
    <%= f.label :endo_survivor, "I'm an Endo Survivor!", :class => "info" %>
    <%= f.check_box :endo_survivor %>
  </div>

  <div class="field">
    <%= f.label :join_krewe, "I want to join the Krewe!", :class => "info" %>
    <%= f.check_box :join_krewe %>
  </div>


  <div class="actions">
    <%= f.submit "Count me in!", :class => "info" %>
  </div>

<% end %>